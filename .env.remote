# ─────────────────────────────────────────────
# Remote / Production
# ─────────────────────────────────────────────

APP_ENV=production
APP_BRAND_NAME=YourAppName
APP_SCHEME=yourapp
APP_SLUG=yourapp

# Real backend API (change to your deployed backend endpoint)
API_BASE_URL=https://api.yourdomain.com
APP_WEB_ORIGIN=https://app.yourdomain.com

# Disable noisy logs & demo data
API_DEBUG=0
WEB_PERSIST_TOKEN=0

# ─────────────────────────────────────────────
# Image & CDN Handling
# ─────────────────────────────────────────────
DEMO_IMAGES=0
DEMO_IMAGE_PROVIDER=unsplash
ALLOWED_IMAGE_HOSTS=cdn.yourdomain.com images.yourdomain.com

# (Web builds only — safe for exposure)
EXPO_PUBLIC_API_BASE_URL=https://api.yourdomain.com
EXPO_PUBLIC_APP_WEB_ORIGIN=https://app.yourdomain.com
EXPO_PUBLIC_DEMO_IMAGES=0
EXPO_PUBLIC_DEMO_IMAGE_PROVIDER=unsplash
EXPO_PUBLIC_ALLOWED_IMAGE_HOSTS=cdn.yourdomain.com images.yourdomain.com

# ─────────────────────────────────────────────
# Expo / EAS
# ─────────────────────────────────────────────
EAS_PROJECT_ID=your-eas-project-id-here
EAS_UPDATE_URL=https://u.expo.dev/<your-update-id>

# ─────────────────────────────────────────────
# Optional Branding / Versioning
# ─────────────────────────────────────────────
APP_VERSION=1.0.0
