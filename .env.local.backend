# ─────────────────────────────────────────────
# Local Development (Real Backend)
# ─────────────────────────────────────────────

APP_ENV=development
APP_BRAND_NAME=YourAppName
APP_SCHEME=yourapp
APP_SLUG=yourapp

# Point to your locally running backend
# Replace with your own dev server address/port
API_BASE_URL=http://localhost:3000
APP_WEB_ORIGIN=http://localhost:8081

# Enable local debugging
API_DEBUG=1
WEB_PERSIST_TOKEN=0

# ─────────────────────────────────────────────
# Image Handling (real assets, no placeholders)
# ─────────────────────────────────────────────
DEMO_IMAGES=0
DEMO_IMAGE_PROVIDER=unsplash
ALLOWED_IMAGE_HOSTS=cdn.yourdomain.com images.yourdomain.com localhost

# (Optional web runtime duplicates)
EXPO_PUBLIC_API_BASE_URL=http://localhost:3000
EXPO_PUBLIC_APP_WEB_ORIGIN=http://localhost:8081
EXPO_PUBLIC_DEMO_IMAGES=0
EXPO_PUBLIC_DEMO_IMAGE_PROVIDER=unsplash
EXPO_PUBLIC_ALLOWED_IMAGE_HOSTS=cdn.yourdomain.com images.yourdomain.com localhost

# ─────────────────────────────────────────────
# Expo / EAS
# ─────────────────────────────────────────────
EAS_PROJECT_ID=your-eas-project-id-here
EAS_UPDATE_URL=https://u.expo.dev/<your-update-id>

# ─────────────────────────────────────────────
# Optional version tag for clarity
# ─────────────────────────────────────────────
APP_VERSION=1.0.0
